@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Delete Villa Number</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger">             </div>
            <input hidden asp-for="villaNumber.VillaNo" />

            <div class="col-2">
                <label asp-for="villaNumber.VillaNo" class="control-label pt-2" style="font-size:20px">
                </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="villaNumber.VillaNo" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="villaNumber.VillaId" class="control-label pt-2" style="font-size:20px">
                </label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="villaNumber.VillaId" class="form-select" disabled asp-items="@Model.VillaList">
                    <option disabled selected>
                        --Select Villa--
                    </option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="villaNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px">
                </label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="villaNumber.SpecialDetails" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Go to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>

        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}